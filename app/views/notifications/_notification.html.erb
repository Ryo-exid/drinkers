<div class="user-view">
  <% visiter = notification.visiter %>
  <% visited = notification.visited %>
  <% post = notification.post %>
  <%= link_to user_path(notification.visiter) do %>
    <%= attachment_image_tag visiter, :profile_image, size:"70x70", format: "jpeg", fallback: "no_image.jpg", class:"rounded-circle" %>
  <% end %>
  <%= notification_form(notification) %>
    <span class="moderate-font">
      <%= " (#{time_ago_in_words(notification.created_at)} 前)" %>
      <% if !@post_comment.nil? %>
        <p class="moderate-font text-center" style="color: #C0C0C0;"><%= @post_comment %></p>
      <% end %>
    </span>
</div>
<hr>
