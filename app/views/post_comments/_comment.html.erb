<% post.post_comments.each do |post_comment| %>
  <div class="row">
    <div class="col-md-1 my-3 text-center">
      <%= link_to user_path(post_comment.user) do %>
        <%= attachment_image_tag post_comment.user, :profile_image, size:"60x60", fallback: "no_image.jpg", class:"mt-3 rounded-circle" %><br>
        <%= post_comment.user.name %>
      <% end %>
    </div>
    <div class="col-md-3 my-3 d-flex align-items-center">
      <%= post_comment.comment %>
    </div>
    <div class="col-md-1 my-3 d-flex align-items-end">
      <% if current_user == post_comment.user %>
        <%= link_to "削除", post_post_comment_path(post_comment.post_id, post_comment.id), class: "btn-sm btn btn-outline-danger", method: :delete %>
      <% end %><br>
    </div>
  </div>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: [post, post_comment], local:true do |f| %>
    <%= f.text_area :comment, size: "50x5" %><br>
    <%= f.submit "送信" %>
  <% end %>
<% end %>