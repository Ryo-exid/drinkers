<% post.post_comments.each do |post_comment| %>
  <div class="row">
    <div class="col-md-3 text-center">
      <%= link_to user_path(post_comment.user), data: {"turbolinks"=>false} do %>
        <%= attachment_image_tag post_comment.user, :profile_image, size:"60x60", fallback: "no_image.jpg", class:"mt-3 rounded-circle" %><br>
        <%= post_comment.user.name %>
      <% end %>
    </div>
    <div class="col-md-7 d-flex align-items-center">
      <h5><%= post_comment.comment %></h5>
    </div>
    <div class="col-md-1 d-flex align-items-end">
      <% if current_user == post_comment.user %>
        <%= link_to "削除", post_post_comment_path(post_comment.post_id, post_comment.id), remote: true, class: "btn-sm btn btn-outline-danger", method: :delete %>
      <% end %><br>
    </div>
  </div>
  <hr class="mb-0">
<% end %>
