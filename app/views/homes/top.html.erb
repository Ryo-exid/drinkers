<div class="top-page my-3">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="text-center">
          <h1 class="application-title-top mt-5">Drinker × Drinker</h1>
          <h5 class="application-title-sub my-2">お酒専門のSNSサイト</h5>
        </div>
        <% unless @all_ranks.empty? %>
          <div class="fas fa-crown mt-5 mb-1">
            <spam class="ranking-title"> Ranking</span>
          </div>
          <div class="d-flex flex-wrap justify-content-around col-12">
            <% @all_ranks.each.with_index(1) do |post, i| %>
              <div class="my-5 col-9 h-auto">
                <h4 class="text-center ranking-order">第<%= i %>位</h4>
                <div class="ranking-post-box">
                  <div class="ml-3 mt-2 form-inline">
                    <%= link_to user_path(post.user) do %>
                      <%= attachment_image_tag post.user, :profile_image, size: "60x60", fallback: "no_image.jpg", class:"rounded-circle mr-4" %>
                    <% end %>
                    <p class="post-user-name mt-3"><%= post.user.name %></p>
                  </div>
                  <hr style="margin-top: 10px;">
                  <p>タイトル: <%= link_to post.title, post_path(post), data: {"turbolinks"=>false} %><p>
                    <%= attachment_image_tag post, :post_image, format: "jpeg", size: "400", class: "img-responsive rounded d-block mx-auto" %>
                  <p>キャプション: <%= post.caption %></p>
                  <div id="star-rate-<%= post.id %>" class="star">
                    <span class="mr-3">レビュー：<%= post.rate %></span>
                  </div>
                  <script>
                    $("#star-rate-<%= post.id %>").raty({
                      size: 1,
                      starOff: "<%= asset_path('star-off.png') %>",
                      starOn: "<%= asset_path('star-on.png') %>",
                      starHalf: "<%= asset_path('star-half.png') %>",
                      half: true,
                      readOnly: true,
                      score: "<%= post.rate %>",
                    });
                  </script>
                  <p>場所: <%= post.location %></p>
                  <div id="favorite_btn_<%= post.id %>">
                    <%= render "favorites/favorite-btn", post: post %>
                  </div>
                  <p>コメント数: <%= post.post_comments.count %></p>
                  <p>投稿者: <%= link_to post.user.name, user_path(post.user.id), data: {"turbolinks"=>false} %></p>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <h2>新着順</h2>
          <div class="d-flex flex-wrap justify-content-center">
            <%= render "posts/index", posts: @posts %>
          </div>
          <div class="d-flex justify-content-center">
            <%= paginate @posts %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>