<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, remote: true, class: "fas fa-heart like-btn" %>
  <% else %>
    <%= link_to post.favorites.count, post_favorites_path(post), method: :post, remote: true, class: "fas fa-heart like-btn-unlike" %>
  <% end %>
<% else %>
  <%= link_to post.favorites.count, new_user_session_path, class: "fas fa-heart like-btn", data: {"turbolinks"=>false} %>
<% end %>