<% if user_signed_in? %>
  <% if post.favorited_by?(current_user) %>
    <%= link_to post.favorites.count, post_favorites_path(post), method: :delete, remote: true, class: "fa fa-heart like-btn" %>
  <% else %>
    <%= link_to post.favorites.count, post_favorites_path(post), method: :post, remote: true, class: "fa fa-heart like-btn-unlike" %>
  <% end %>
<% else %>
  <i class="fa fa-heart like-btn"><%= post.favorites.count %></i>
<% end %>