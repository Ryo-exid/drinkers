<div class="container mt-5">
  <h1>お問い合わせ内容をご確認ください。</h1>
  <div class="row">
    <div class="col-md-11 mx-auto">
      <%= form_with model: @inquiry, :url => inquiry_complete_path, local:true do |f| %>
        <table class="table my-5">
          <tr>
            <th>お名前</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <%= f.submit "送信", :class => "btn-lg btn btn-primary" %>
        <div class="text-right">
          <h4><%= link_to "入力画面に戻る", "javascript:history.back()" %></h4>
        </div>
      <% end %>
    </div>
  </div>
</div>