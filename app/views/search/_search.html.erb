<div class="container">
  <div class="d-flex justify-content-end my-3">
    <div class="search_form">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
        <%= f.select :range, options_for_select([["投稿"], ["ユーザ"], ["場所"]]) %>
        <%= f.select :search, options_for_select([["部分一致", "partial_match"], ["前方一致", "forward_match"], ["後方一致", "back_word_match"],["完全一致", "perfect_match"]]) %>
        <%= f.submit "検索", class: "btn-sm btn btn-outline-primary" %>
      <% end %>
    </div>
  </div>
</div>