<div class="container">
  <% users.each do |user| %>
    <div class="row">
      <div class="col-md-1 text-center">
        <%= link_to user_path(user) do %>
          <%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "no_image.jpg", class:"rounded-circle" %><br>
          <%= user.name %>
        <% end %>
      </div>
      <div class="col-md-5 mx-auto mt-1 d-flex align-items-center" style="overflow-wrap: break-word;">
        <h5><%= user.introduction %></h5>
      </div>
      <div class="col-md-2 mx-auto mt-3 d-flex align-items-center" style="white-space: nowrap;">
        <p>フォロー数: <%= user.followings.count %></p>
      </div>
      <div class="col-md-2 mx-auto mt-3 d-flex align-items-center" style="white-space: nowrap;">
        <p>フォロワー数: <%= user.followers.count %></p>
      </div>
    </div>
    <hr>
  <% end %>
</div>