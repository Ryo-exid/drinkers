<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "ユーザ名" %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label "生年月日" %><br />
    <%= f.date_select :birth_date, use_month_numbers: true, start_year: 1930, end_year: (Time.now.year), default: Date.new(1996, 1, 1) %>
  </div>

  <div class="field">
    <%= f.label "郵便番号" %><br />
    <%= f.text_field :postcode %>
  </div>

  <div class="field">
    <%= f.label :prefecture_name, "都道府県" %><br />
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, { prompt: '選択してください' } %>
  </div>

  <div class="field">
    <%= f.label :address_city, "市区町村" %><br />
    <%= f.text_field :address_city %>
  </div>

  <div class="field">
    <%= f.label :address_street, "番地" %><br />
    <%= f.text_field :address_street %>
  </div>

  <div class="field">
    <%= f.label :"建物名" %><br />
    <%= f.text_field :address_building %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>


  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
