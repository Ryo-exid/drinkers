<div class="container">
  <div class="row">
    <div class="col-5 mx-auto">
      <h2 class="font-weight-bolder mt-5">ログイン</h2>

      <div class='login-flash-message mt-4'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="font-italic">
          <div class="field form-inline mt-5">
            <%= f.label "ユーザ名", class: "col-md-4" %>
            <%= f.text_field :name, autofocus: true, class: "form-control col-md-7" %>
          </div>

          <div class="field form-inline mt-3">
            <%= f.label :password, class: "col-md-4" %>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control col-md-7" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field col-md-9 mt-4 ml-3 text-left">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions mt-3 col-md-11 text-right">
            <%= f.submit "ログイン", class: "btn btn-outline-success" %>
          </div>
        </div>
      <% end %>
      <div class="field col-md-6 text-left">
        <%= link_to "新規登録はこちら", new_user_registration_path %>
      </div>
    </div>
  </div>
</div>
