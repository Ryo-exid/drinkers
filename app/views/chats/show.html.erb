<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mt-5">
      <h2 id="room" data-room="<%= @room.id %>" data-user="<%= current_user.id %>" class="chat-heading"><%= @user.name %>さん とのダイレクトメッセージ</h2>
      <table class="message table">
        <thead>
          <tr>
            <th class="text-left"><%= @user.name %></th>
            <th class="text-right"><%= current_user.name %></th>
          </tr>
        </thead>
        <% @chats.each do |chat| %>
          <% if chat.user_id != current_user.id %>
          <tbody>
            <tr>
              <th>
                <p class="chat-partner-message"><%= chat.message %></p>
              </th>
              <th></th>
            </tr>
          </tbody>
          <% else %>
          <tbody>
            <tr>
              <th></th>
              <th>
                <p class="chat-message"><%= chat.message %></p>
              </th>
            </tr>
          </tbody>
          <% end %>
        <% end %>
      </table>

      <%= form_with model: @chat do |f| %>
        <div class="d-flex justify-content-end mb-5">
        <%= f.text_field :message, class: "form-control col-md-5" %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "送信", class: "btn btn-outline-success ml-4"%>
      <% end %>
    </div>
  </div>
</div>