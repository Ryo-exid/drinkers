<div class="container">
  <h2>投稿編集</h2>
  <%= attachment_image_tag @post, :post_image, format: "jpeg", size: "200x250" %>
  <%= form_with model: @post, local: true do |f| %>
    <div class="form-group">
      <%= f.label "タイトル" %>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <%= f.label "キャプション" %>
      <%= f.text_area :caption %>
    </div>
    <div class="form-group">
      <%= f.label "場所" %>
      <%= f.text_field :location %>
    </div>
    <%= f.submit :変更を保存, class: "btn btn-outline-success" %>
  <% end %>
</div>