<%= form_with model: post, local:true do |f| %>
  <%= render "layouts/form_error_messages", model: f.object %>
  <div class="form-group row">
    <%= f.label :post_image, '画像 ', class:'col-md-3 col-form-label' %>
    <%= f.attachment_field :post_image %>
  </div>

  <div class="form-group row">
    <%= f.label :title, 'タイトル ', class:'col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= f.label :caption, 'キャプション ', class:'col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_area :caption, class: "form-control", rows: "8" %>
    </div>
  </div>

  <div class="form-group row" id="star">
    <%= f.label :rate,'レビュー ', class:'col-md-3 col-form-label' %>
    <%= f.hidden_field :rate, id: :review_star %>
  </div>

  <script>
    $("#star").raty({
      size: 10,
      starOff: "<%= asset_path('star-off.png') %>",
      starOn: "<%= asset_path('star-on.png') %>",
      starHalf: "<%= asset_path('star-half.png') %>",
      scoreName: "post[rate]",
      half: true,
    });
  </script>

  <div class="form-group row">
    <%= f.label :location,'場所 ', class:'col-md-3 col-form-label' %>
    <div class="col-md-9">
      <%= f.text_area :location, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row justify-content-end">
    <div class="col-md-9">
      <%= f.submit '投稿', class:"btn btn-outline-success" %>
    </div>
  </div>
<% end %>