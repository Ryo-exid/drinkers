<div class="container">
  <% if @post.user == current_user %>
    <%= link_to "編集する", edit_post_path(@post) %> | <%= link_to "削除する", post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？"  %>
  <% end %><br>
  <%= attachment_image_tag @post, :post_image, format: "jpeg", size: "200x250" %>
  <p>タイトル: <%= @post.title %></p>
  <p>キャプション: <%= @post.caption %></p>
  <p>場所: <%= @post.location %></p>
  <p id="favorite_btn_<%= @post.id %>" class="favorite-btn">
    <%= render "favorites/favorite-btn", post: @post %>
  </p>
  <p>投稿者: <%= @post.user.name %></p>
  <p id="comments-count">コメント数: <%= @post.post_comments.count %></p>
  <p id="reply_<%= @post.id %>">
    <%= render partial: "post_comments/comment", locals: {post: @post, post_comment: @post_comment} %>
  </p>
  <% if user_signed_in? %>
    <%= form_with model: [@post, @post_comment], remote: true do |f| %>
      <%= f.text_area :comment, size: "50x5" %><br>
      <%= f.submit "送信" %>
    <% end %>
  <% end %>
</div>