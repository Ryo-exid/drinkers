<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="text-right">
        <%= link_to 'Create', new_post_path, class: "btn btn-outline-success", data: {"turbolinks"=>false} %>
      </div>
      <h2>新着順</h2>
      <div class="d-flex flex-wrap justify-content-center">
        <%= render "posts/index", posts: @posts %>
      </div>
      <div class="d-flex justify-content-center">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>