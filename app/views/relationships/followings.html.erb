<div class="mt-3">
  <%= render "search/search" %>
  <h2 class="col-md-5 text-center follows-heading">Follow Users</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-12 mx-auto">
        <% if @users.exists? %>
          <%= render "users/index", users: @users %>
        <% else %>
          <h4 class="font-weight-bold text-black-50">現在フォローしているユーザはいません</h4>
        <% end %>
      </div>
    </div>
  </div>
</div>